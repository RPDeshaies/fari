{
  "name": "fari",
  "version": "4.0.5",
  "description": "Fari is the best Fate RPG companion application. License: AGPL-3.0-or-later",
  "author": "René-Pier Deshaies-Gélinas",
  "license": "AGPL-3.0",
  "main": "index.js",
  "scripts": {
    "ci": "yarn install && yarn build && yarn validate",
    "i18n": "node -r esm i18n.js",
    "start": "parcel ./lib/index.html --target browser",
    "build": "parcel build ./lib/index.html --target browser",
    "serve:build": "cp serve.json dist/serve.json && yarn serve dist -l 1234",
    "preview:build": "rm -rf ./dist && yarn build && yarn deploy:preview",
    "beta": "yarn preview:build --alias beta",
    "build-and-serve": "yarn build && yarn serve:build",
    "tsc": "tsc --project tsconfig.json --incremental --noEmit",
    "lint": "eslint 'lib/**' --cache",
    "test": "jest --coverage --runInBand",
    "test:watch": "node --inspect node_modules/.bin/jest --runInBand --watch",
    "int": "yarn build && concurrently \"cypress run\" \"yarn serve:build\" --success first --kill-others --names \"cypress,server\" ",
    "int:start": "concurrently \"cypress open\" \"yarn start\" --success first --kill-others --names \"cypress,server\" ",
    "tsc-and-lint": "yarn tsc && yarn lint",
    "validate": "yarn tsc && yarn lint && yarn test",
    "deploy:preview": "netlify deploy --site 534c856a-7d30-4fdd-ad4a-9845ccdefd08",
    "deploy:prod": "netlify deploy --site 534c856a-7d30-4fdd-ad4a-9845ccdefd08 --prod",
    "storybook": "start-storybook -p 6006 -s ./fonts",
    "build-storybook": "build-storybook -s ./fonts",
    "chromatic": "npx chromatic --project-token 45d2fc40e469"
  },
  "dependencies": {
    "@emotion/css": "^11.0.0",
    "@material-ui/core": "^4.11.3",
    "@material-ui/data-grid": "^4.0.0-alpha.18",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@sentry/react": "^6.2.4",
    "@types/hoist-non-react-statics": ">= 3.3.1",
    "@types/node": ">= 12",
    "canvas-confetti": "^1.2.0",
    "dayjs": "^1.9.3",
    "dompurify": "^2.2.7",
    "i18next": "^19.4.4",
    "i18next-browser-languagedetector": "^6.0.1",
    "immer": "^8.0.1",
    "jest-junit": "^12.0.0",
    "lodash": "^4.17.19",
    "marked": "^2.0.0",
    "netlify-cli": "^3.10.9",
    "peerjs": "^1.2.0",
    "react": "^17.0.1",
    "react-color": "^2.18.1",
    "react-dnd": "^13.1.1",
    "react-dnd-html5-backend": "^12.1.1",
    "react-dom": "^17.0.1",
    "react-helmet-async": "^1.0.5",
    "react-i18next": "^11.4.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "roughjs": "^4.3.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@storybook/addon-actions": "^6.2.1",
    "@storybook/addon-essentials": "^6.2.1",
    "@storybook/addon-links": "^6.2.1",
    "@storybook/builder-webpack5": "^6.2.1",
    "@storybook/react": "^6.2.1",
    "@testing-library/react": "^11.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/dompurify": "^2.2.1",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.149",
    "@types/marked": "^1.2.1",
    "@types/pouchdb": "^6.4.0",
    "@types/quill": "^2.0.5",
    "@types/react": ">= 16",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.4",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.6.2",
    "concurrently": "^5.3.0",
    "cypress": "^6.8.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "esm": "^3.2.25",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
