{
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.cache/**": true
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.tabSize": 2
}
