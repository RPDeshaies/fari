{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./.tsc",
    "skipLibCheck": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,

    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "exclude": ["node_modules", "cypress"]
}
